<!DOCTYPE html>
<html>


<%- include('./partials/head')%>
<body>
<%- include('./partials/header')%>

    <section class="container">
        <div class="slider-wrapper">
            <div class="slider">
                <img class="slide-1" src="/img/1604147552_366038_1604147771_sumario_normal.jpg" alt="Imagen 1">
                <img class="slide-2" src="/img/descarga.jpg" alt="Imagen 2">
                <img class="slide-3" src="/img/D_NQ_NP_773314-MLA54889526534_042023-O.webp" alt="Imagen 3">
            </div>
            <div class="slider-nav">
                <a href="#slide-1"></a>
                <a href="#slide-2"></a>
                <a href="#slide-3"></a>
            </div>
        </div>
    </section>


    <h1 class="O">OFERTAS</h1>
    <div class="Productos">

        <section class="articulos-container">
            <% for (let i = 0; i < products.length; i++) { %>
            <div class="articulo">
                <a href="">
                <figure>
                    <img src="/img/<%= products[i].image%>" alt="Imagen de Zapatill">
                </figure>
                </a>
                <div class="elementos-articulo">
                    <div class="camion"><i class="fa fa-truck" aria-hidden="true"></i></div>
                    <div class="precio-descuento">
                    <div class="precio">$<%= products[i].price%></div>
                    <div class="descuento"><%= products[i].discount%>% OFF</div>
                    
                    </div>
                    <p><%= products[i].name%></p>
                </div>
                
            </div>
        <%}%>
    <h1 class="O">PRODUCTOS</h1>
    <div class="Productos">


        productsDescuento

        <% for (let i = 0; i < products.length; i++) { %>

        <section class="articulos-container">
            <div class="articulo">
                <a href="">
                <figure>
                    <img src="/img/<%= productsDescuento[i].image%>" alt="Imagen de Zapatilla">
                </figure>
                </a>
                <div class="elementos-articulo">
                    <div class="camion"><i class="fa fa-truck" aria-hidden="true"></i></div>
                    <div class="precio-descuento">
                    <div class="precio">$<%= productsDescuento[i].price%></div>
                    <div class="descuento"><%= productsDescuento[i].discount%>% OFF</div>
                    </div>
                    <p><%= productsDescuento[i].name%></p>
                </div>
            </div>

        </section>
        <%}%>
            </div>

  <%- include('./partials/footer') %>
              
</body>
</html>
